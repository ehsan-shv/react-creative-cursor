{
  "version": "0.1.0",
  "license": "MIT",
  "description": "A creative and customizable React cursor component.",
  "keywords": [
    "react",
    "react-cursor",
    "custom-cursor",
    "gelly-cursor",
    "magnetic-cursor",
    "sticky-cursor"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-creative-cursor",
  "author": "Ehsan Shahvirdi",
  "module": "dist/react-creative-cursor.esm.js",
  "size-limit": [
    {
      "path": "dist/react-creative-cursor.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-creative-cursor.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "husky": "^7.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "gsap": "^3.10.3"
  }
}
